<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_employee_form_inherit_tinh_luong" model="ir.ui.view">
            <field name="name">hr.employee.form.tinh_luong</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='active_group']" position="before">
                    <group string="Thông tin lương">
                        <field name="luong_co_ban"/>
                        <field name="phu_cap_co_dinh"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group string="Thông tin bảo hiểm">
                        <field name="ap_dung_bao_hiem"/>
                        <field name="luong_dong_bao_hiem" attrs="{'invisible': [('ap_dung_bao_hiem', '=', False)]}"/>
                    </group>
                    <group string="Tỷ lệ bảo hiểm nhân viên đóng (%)" attrs="{'invisible': [('ap_dung_bao_hiem', '=', False)]}">
                        <field name="ty_le_bhxh_nv"/>
                        <field name="ty_le_bhyt_nv"/>
                        <field name="ty_le_bhtn_nv"/>
                    </group>
                    <group string="Tỷ lệ bảo hiểm công ty đóng (%)" attrs="{'invisible': [('ap_dung_bao_hiem', '=', False)]}">
                        <field name="ty_le_bhxh_cty"/>
                        <field name="ty_le_bhyt_cty"/>
                        <field name="ty_le_bhtn_cty"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
